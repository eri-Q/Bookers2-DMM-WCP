<div class="container"> 
  <div class="row">
    <div class="col-lg-3">
      <h2>User info</h2>
      <div>
      <h3><%= @user.name %></h3>
      <%= image_tag('images/no_image.jpg') %>
      </div>

      <table class="table">
        <tbody>
          <thead>
            <tr>
          	  <th>name</th>
          	  <th><%= @user.name %></th>
          	</tr>
          	<tr>
          	  <th>introduction</th>
          	  <th></th>
          	</tr>
        	</thead>
        </tbody>
      </table>
      <%= link_to edit_user_registration_path, class: "col-lg-12 btn btn-secondary", method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-lg-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
      </tbody>
      </table>
    </div>
    </div>
    </div>
  </div>
</div>

