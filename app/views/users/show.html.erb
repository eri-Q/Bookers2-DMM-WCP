<div class="container"> 
  <div class="row">
    
    <div class="col-lg-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <% @post_images.each do |post_image| %>
            <td><%= attachment_image_tag post_image, :image %>
            <% end %> 
            <% @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <% end %>
          </tr>
      </tbody>
      </table>
</div>
