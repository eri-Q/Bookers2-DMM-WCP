<main>
  <%= flash[:notice] %>
  <div class="container">
    <div class="row">
        <%= render 'books/book', book: @book, user: @user %>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
             <tbody>
                <% if @book.user == current_user %>
                <tr>
                  <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></td>
                  <td><%= @book.title %></td>
                  <td><%= @book.body %></td>
                  <td><%= link_to "Edit", edit_book_path(@book) %></td>
                  <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
                  <% else %>
                  <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
                  <td><%= @book.title %></td>
                  <td><%= @book.body %></td>
                </tr>
                <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</main>