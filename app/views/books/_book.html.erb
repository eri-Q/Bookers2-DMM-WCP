<div class="col-lg-3">
      <h2>User info</h2>
      <div>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </div>

        <table class="table">
          <tbody>
            <thead>
              <tr>
            	  <th>name</th>
            	  <th><%= user.name %></th>
            	</tr>
            	<tr>
            	  <th>introduction</th>
            	  <th><%= user.introduction %></th>
            	</tr>
          	</thead>
          </tbody>
        </table>
      <%= link_to edit_user_path(user), class: "col-lg-12 btn btn-secondary", method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>